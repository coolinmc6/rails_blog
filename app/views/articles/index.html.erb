<!-- index.html.erb -->

<h1>My Blogposts</h1>
 
<%= link_to 'New article', new_article_path %>
<br>
<br>

<table id="articles-list">
  <colgroup>
       <col span="1" style="width: 20%;">
       <col span="1" style="width: 60%;">
       <col span="1" style="width: 20%;">
       
  </colgroup>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="1"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %><br>
      <%= link_to 'Edit', edit_article_path(article) %><br>
      <%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

